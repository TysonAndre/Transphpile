        "nikic/php-parser": "^2.0",
        "symfony/console": "^2.8",
        "symfony/finder": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.1",
        "clue/phar-composer": "^1.0"
    }
}
