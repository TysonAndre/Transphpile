{
    "name": "jaytaph/transphpile",
    "type": "application",
    "description": "PHP 7.0 to 5.6 Transpiler",
    "license": "BSD-3",

    "authors": [{
        "name": "Joshua Thijssen",
        "email": "jthijssen@noxlogic.nl"
    }],

    "autoload": {
        "psr-4": {"Transphpile\\": "lib/Transphpile"}
    },
    "scripts" : {
        "post-install-cmd" : [
            "patch -p0 < phar.patch"
        ]
    },
    "bin": [ "bin/transphpile" ],
